<?xml version="1.0"?>
<robot name="omni_robot" xmlns:xacro="https://ros.org/wiki/xacro">
    <xacro:macro name="wheel_macro" params="parent prefix xyz">
		<joint name="${prefix}_rotate_joint" type="continuous">
			<origin xyz="${xyz}" rpy="0 0 0" />
			<parent link="${parent}" />
			<child link="${prefix}_rotate_link"/>
			<limit velocity="20" effort="1.0" />
			<axis xyz="0 0 1" />
		</joint>
		<link name="${prefix}_rotate_link">
			<inertial>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<mass value="0.05" />
				<inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
			</inertial>
			<visual>
				<geometry>
					<cylinder radius="0.05" length="0.03" />
				</geometry>
			</visual>
			<collision>
				<geometry>
					<cylinder radius="0.05" length="0.03" />
				</geometry>
			</collision>
		</link>
		<joint name="${prefix}_wheel_joint" type="continuous">
			<origin xyz="0 0 -0.03" rpy="${radians(-90)} 0 0" />
			<parent link="${prefix}_rotate_link" />
			<child link="${prefix}_wheel_link" />
			<limit velocity="50" effort="2.0" />
			<axis xyz="0 0 1" />
		</joint>
		<link name="${prefix}_wheel_link">
			<inertial>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<mass value="0.05" />
				<inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
			</inertial>
			<visual>
				<geometry>
					<cylinder radius="0.05" length="0.03" />
				</geometry>
			</visual>
			<collision>
				<geometry>
					<cylinder radius="0.05" length="0.03" />
				</geometry>
			</collision>
		</link>
		<gazebo reference="${prefix}_wheel_link">
			<mu1 value="2.5"/>
			<mu2 value="2.5"/>
			<kp value="50000"/>
			<kd value="10"/>
		</gazebo>
		<ros2_control name="GazeboSystem" type="system">
			<hardware>
				<plugin>gazebo_ros2_control/GazeboSystem</plugin>
			</hardware>
			<joint name="${prefix}_rotate_joint">
				<command_interface name="position">
					<param name="min">-15</param>
					<param name="max">15</param>
				</command_interface>
				<state_interface name="position">
					<param name="intitial_value">0.0</param>
				</state_interface>
				<state_interface name="velocity"/>
				<state_interface name="effort"/>
			</joint>
			<joint name="${prefix}_wheel_joint">
				<command_interface name="velocity">
					<param name="min">-20</param>
					<param name="max">20</param>
				</command_interface>
				<state_interface name="position"/>
				<state_interface name="velocity"/>
				<state_interface name="effort"/>
			</joint>
		</ros2_control>
    </xacro:macro>
</robot>